<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.julienbirabent.bookcoopapp.LoginActivity">

    <TextView
        android:id="@+id/signinTextId"
        android:text="Sign in"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/phoneId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/signinTextId"
        android:hint="phone number"
        android:inputType="phone"
        android:layout_marginTop="100dp"
        android:layout_width="@dimen/editText_horizontal_size"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/usernameId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="email"
        android:layout_below="@id/phoneId"
        android:layout_width="@dimen/editText_horizontal_size"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/passwordId"
        android:layout_below="@+id/usernameId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_width="@dimen/editText_horizontal_size"
        android:layout_height="wrap_content"
        android:password="false"
        tools:password="false" />
    <Button
        android:id="@+id/signinButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/passwordId"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:text="Go"
        android:textStyle="italic"
        android:layout_height="wrap_content" />


</RelativeLayout>
